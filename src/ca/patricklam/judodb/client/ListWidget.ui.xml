<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<!-- ListWidget.ui.xml -->

<ui:UiBinder
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>

<ui:style>
.session {
	position:absolute;
	top:3.5em; right: 1em; margin-left: 1px;
}

.userclub {
	position:absolute;
	top:1.5em; right: 1em;
}

.ft303 {
}

.impot {
}

.edit {
}

.filter {
}

table {
  border-collapse: collapse;
}

td {
  padding: 0.3em;
}
</ui:style>
    
<g:HTMLPanel>
	<b:ListBox ui:field="sessionListBox" visibleItemCount="1" styleName="{style.session}" />
	<b:DropDownMenu ui:field="dropDownUserClubs" styleName="{style.userclub}" />
	<h1 id="stdTitle" class="noprint">Listes des cours</h1>

	<g:FormPanel ui:field="listForm" method="post">
	  <g:HTMLPanel>
	    <g:HorizontalPanel>
		<g:InlineLabel>Cours&nbsp;</g:InlineLabel><b:ListBox ui:field="cours" visibleItemCount="1" />
		<g:InlineLabel>&nbsp;sortir: </g:InlineLabel><g:Anchor ui:field="pdf">(PDF)</g:Anchor>
		<g:InlineLabel>&nbsp;</g:InlineLabel><g:Anchor ui:field="presences">(présences)</g:Anchor>
		<g:InlineLabel>&nbsp;</g:InlineLabel><g:Anchor ui:field="xls">(XLS)</g:Anchor>
		<g:InlineLabel>&nbsp;</g:InlineLabel><g:Anchor ui:field="xls2">(XLS complet)</g:Anchor>
		
		<g:Hidden ui:field="multi" name="multi"/>
		<g:Hidden ui:field="title" name="title"/>
		<g:Hidden ui:field="short_title" name="short_title"/>
		<g:Hidden ui:field="data" name="data"/>
		<g:Hidden ui:field="data_full" name="data_full"/>
		<g:Hidden ui:field="auxdata" name="auxdata"/>

		<g:Hidden ui:field="club_id" name="club_id"/>
	    </g:HorizontalPanel>
		<g:HTMLPanel ui:field="ft303_controls" styleName="{style.ft303}">
		  &Eacute;v&eacute;nement: <b:TextBox ui:field="evt" name="evt" />&nbsp; &nbsp; 
		  Date: <b:TextBox ui:field="date" name="date" />&nbsp;&nbsp;
 		  <g:Anchor ui:field="createFT">(créer FT)</g:Anchor>
 		</g:HTMLPanel>
		<g:HTMLPanel ui:field="impot_controls" styleName="{style.impot}">
 		  <!--  <g:Anchor ui:field="recalc">recalcul des prix</g:Anchor> -->
 		  <label>Utiliser les prorata: <g:CheckBox ui:field="prorata" value="true"/></label>
		  <g:Anchor ui:field="mailmerge">Créer reçus</g:Anchor>
 		</g:HTMLPanel>
		<g:HTMLPanel ui:field="edit_controls" styleName="{style.edit}">
		  Date passage: <b:TextBox ui:field="edit_date" name="edit_date" />&nbsp;&nbsp;
 		</g:HTMLPanel>
	    <g:HTMLPanel ui:field="filter_controls" styleName="{style.filter}">
	      Division: <b:ListBox ui:field="division"/>&nbsp; &nbsp;
	      Grade: entre <b:ListBox ui:field="grade_lower"/> et <b:ListBox ui:field="grade_upper"/>&nbsp; &nbsp;
	    </g:HTMLPanel>
	  </g:HTMLPanel>
	</g:FormPanel>

	<g:Grid ui:field="results"></g:Grid>

	<b:Label ui:field="nb" />
	
	<g:FormPanel ui:field="listEditForm" method="post">
          <g:FlowPanel>
            <g:Hidden ui:field="guid_on_form" name="guid" />
            <g:Hidden ui:field="currentSessionField" name="current_session" />
            <g:Hidden ui:field="dataToSave" name="data_to_save" />
          </g:FlowPanel>
	</g:FormPanel>
	<div id="saveorquit" class="actions noprint" style="padding-bottom: 1em">
     <div style="float:left; text-align:right;">
      <b:Button ui:field="save">Sauvegarder</b:Button>
     </div>
     <div style="float:right; text-align:right;">
      <b:Button ui:field="quit">Annuler</b:Button>
     </div>
    </div>
	
 </g:HTMLPanel>
 
</ui:UiBinder>
