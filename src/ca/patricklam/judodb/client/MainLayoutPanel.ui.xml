<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">

<ui:style>
 .padLeft { padding-left:1em; }
 .status {
   /* XXX this doesn't actually work for some reason */
   position:absolute;
   left:35%;
   top:0%;
 }
 .version {
   position:absolute;
   bottom: 0.5em; right: 1em;
 }
</ui:style>

<g:DockLayoutPanel unit='EM' ui:field="dock">

<g:north size='2'>
 <g:Label styleName='{style.status}' ui:field="statusLabel" />
</g:north>

<g:center>
 <g:AbsolutePanel>
  <!-- search UI -->
  <g:at left='0' top='0'>
   <g:FlowPanel ui:field='search' styleName='{style.padLeft}' width='98%'>
    <g:HTML>
     <h1>Recherche judoka</h1>
     <label class="standardtitle" for="query">Nom ou Prenom</label><br /><br />
    </g:HTML>
   </g:FlowPanel>
  </g:at>

  <!-- edit UI -->
  <g:at left='0' top='0'>
   <g:ScrollPanel ui:field='editClient' styleName='{style.padLeft}' width='99%' height='100%'/>
  </g:at>

  <!-- lists UI -->
  <g:at left='0' top='0'>
   <g:ScrollPanel ui:field='lists' styleName='{style.padLeft}' width='99%' height='100%' />
  </g:at>

  <!-- config UI -->
  <g:at left='0' top='0'>
   <g:FlowPanel ui:field='config' styleName='{style.padLeft}' width='99%' height='100%' />
  </g:at>

 </g:AbsolutePanel>
</g:center>

<g:east size='15'>
 <g:FlowPanel>
  <g:FlowPanel ui:field='rightbar'>
    <g:FlowPanel ui:field="listActions">
     <g:HTML>
       <h3>Actions</h3>
       <p id="actionList" />
     </g:HTML>
    </g:FlowPanel>
    <g:FlowPanel ui:field="mainActions">
     <g:HTML>
      <h3>Actions</h3>
      <p id="actionList" />
    </g:HTML>
   </g:FlowPanel>
  </g:FlowPanel>
  <!-- todo noprint -->
  <g:Label ui:field="versionLabel" styleName='{style.version}' />
 </g:FlowPanel>
</g:east>

</g:DockLayoutPanel>


</ui:UiBinder> 