<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">

<ui:style>
 .version {
   position: fixed;
   bottom: 0.5em; right: 1em;
 }

 .status {
   position: fixed;
   top: 0;
   left: 30%;
   width: 40%;
 }

 .statusAlert {
   padding: 10px;
 }
</ui:style>

<g:FlowPanel>
    <g:ScrollPanel ui:field='mainPanel' width='99%' height='100%'>
     <g:FlowPanel>
      <b:Container styleName="{style.status}">
       <b:Alert ui:field="statusAlert" type="WARNING" styleName="{style.statusAlert}"> 
         <b.html:Text ui:field="statusText" />
       </b:Alert>
      </b:Container>
      <b:Heading size="H1" text="Base des donn&eacute;es Judo Qu&eacute;bec"/>
      <b:Container>
       <b:Row><b:Column size="MD_7">
        <b:Container ui:field="main">
         <b:Row> <b:Heading size="H2" text="Membres" /> </b:Row>
         <b:Row>
          <b:Column size="MD_6">
           <b:Button ui:field="nouveauButton" text="Nouveau membre" />
          </b:Column>
         </b:Row>
         <b:Row>
          <b:Column size="MD_6">
           <b:InputGroup>
            <b:InputGroupButton>
             <b:Button ui:field="searchButton" text="Recherche membre" />
            </b:InputGroupButton>
            <b:TextBox ui:field="searchTextBox" placeholder="nom ou prenom"/>
           </b:InputGroup>
          </b:Column>
         </b:Row>
         <b:Row>
          <b:Column size="MD_6">
           <b:Button ui:field="listeButton" text="Recherche par liste" />
          </b:Column>
         </b:Row>

         <b:Row> <b:Heading size="H2" text="Configuration" /> </b:Row>
         <b:Row>
          <b:Column size="MD_6">
           <b:Button ui:field="configButton" text="Configuration club (cours, inscription)"></b:Button>
          </b:Column>
         </b:Row>

         <b:Row> <b:Heading size="H2" text="Autre" /> </b:Row>
         <b:Row>
          <b:Column size="MD_6">
           <b:Button ui:field="logoutButton" text="Fermer session"></b:Button>
          </b:Column>
         </b:Row>
        </b:Container>
       </b:Column>

       <b:Column size="MD_5">
        <g:VerticalPanel ui:field='searchResultsPanel'>
         <b:Heading size="H3"><b:Label text='Résultats' /></b:Heading>
         <g:FlexTable ui:field='searchResults' />
         <g:HorizontalPanel ui:field='searchNavPanel'>
          <b:Button ui:field='nextResultsButton' text='Résultats suivants'/>
          <b:Button ui:field='prevResultsButton' text='Résultats précedents'/>
         </g:HorizontalPanel>
        </g:VerticalPanel>
       </b:Column></b:Row>
      </b:Container>

      <b:ButtonGroup  ui:field='dropDownUserClubsButtonGroup'>
       <b:Button dataToggle='DROPDOWN' text='Club' toggleCaret='true' ui:field='dropDownUserClubsButton'/>
       <b:DropDownMenu ui:field='dropDownUserClubs' />
      </b:ButtonGroup>

      <b:Label ui:field="versionLabel" styleName='{style.version}' />
     </g:FlowPanel>
    </g:ScrollPanel>

    <g:ScrollPanel ui:field='editClient' width='99%' height='100%'/>
    <g:ScrollPanel ui:field='lists' width='99%' height='100%'/>
    <g:ScrollPanel ui:field='config' width='99%' height='100%'/>
</g:FlowPanel>

</ui:UiBinder>
