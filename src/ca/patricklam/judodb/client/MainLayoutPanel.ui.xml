<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">

<ui:style>
 .padLeft { padding-left:1em; }
 .status {
   /* XXX this doesn't actually work for some reason */
   position:absolute;
   left:35%;
   top:0%;
 }
 .version {
   position:absolute;
   bottom: 0.5em; right: 1em;
 }
</ui:style>

<g:LayoutPanel>
 <g:layer top='0' left='40%' height='2em' width='20%'>
  <g:Label styleName='{style.status}' ui:field="statusLabel" visible='false'/>
 </g:layer>

 <g:layer>
  <g:DockLayoutPanel unit='EM' ui:field="dock">

  <g:center>
   <g:LayoutPanel>
    <!-- search UI -->
    <g:layer left='0' top='0' width='100%' height='100%'>
     <g:FlowPanel ui:field='mainPanel' styleName='{style.padLeft}' width='98%'>
      <b:Heading size="H1" text="Base des donn&eacute;es Judo Qu&eacute;bec" />
      <b:Container>
       <b:Row><b:Column size="MD_7">
        <b:Container ui:field="main">
         <b:Row> <b:Heading size="H2" text="Membres" /> </b:Row>
         <b:Row>
          <b:Column size="MD_6">
           <b:Button ui:field="nouveauButton" text="Nouveau membre" />
          </b:Column>
         </b:Row>
         <b:Row>
          <b:Column size="MD_6">
           <b:InputGroup>
            <b:InputGroupButton>
             <b:Button ui:field="searchButton" text="Recherche membre" />
            </b:InputGroupButton>
            <b:TextBox ui:field="searchTextBox" placeholder="nom ou prenom"/>
           </b:InputGroup>
          </b:Column>
         </b:Row>
         <b:Row>
          <b:Column size="MD_6">
           <b:Button ui:field="listeButton" text="Recherche par liste" />
          </b:Column>
         </b:Row>

         <b:Row> <b:Heading size="H2" text="Configuration" /> </b:Row>
         <b:Row>
          <b:Column size="MD_6">
           <b:Button ui:field="configButton" text="Configuration club (cours, inscription)"></b:Button>
          </b:Column>
         </b:Row>

         <b:Row> <b:Heading size="H2" text="Autre" /> </b:Row>
         <b:Row>
          <b:Column size="MD_6">
           <b:Button ui:field="logoutButton" text="Fermer session"></b:Button>
          </b:Column>
         </b:Row>
        </b:Container>
       </b:Column>

       <b:Column size="MD_5">
        <g:VerticalPanel ui:field='searchResultsPanel'>
         <b:Label text='Résultats' />
         <g:FlexTable ui:field='searchResults' />
         <g:HorizontalPanel ui:field='searchNavPanel'>
          <b:Button ui:field='nextResultsButton' text='Résultats suivants'/>
          <b:Button ui:field='prevResultsButton' text='Résultats précedents'/>
         </g:HorizontalPanel>
        </g:VerticalPanel>
       </b:Column></b:Row>
      </b:Container>
     </g:FlowPanel>
    </g:layer>

    <!-- edit UI -->
    <g:layer left='0' top='0' width='100%' height='100%'>
     <g:ScrollPanel ui:field='editClient' styleName='{style.padLeft}' width='99%' height='100%'/>
    </g:layer>

    <!-- lists UI -->
    <g:layer left='0' top='0' width='100%' height='100%'>
     <g:ScrollPanel ui:field='lists' styleName='{style.padLeft}' width='99%' height='100%'/>
    </g:layer>

    <!-- config UI -->
    <g:layer left='0' top='0' width='100%' height='100%'>
     <g:LayoutPanel ui:field='config' styleName='{style.padLeft}' width='99%' height='100%'/>
    </g:layer>
   </g:LayoutPanel>
  </g:center>

  <g:east size='15'>
   <g:FlowPanel>
    <g:FlowPanel ui:field='rightbar'>
      <g:FlowPanel ui:field="mainActions">
       <g:HTML>
        <h3>Actions</h3>
        <p id="actionList" />
      </g:HTML>
     </g:FlowPanel>
      <g:FlowPanel ui:field="listActions">
       <g:HTML>
         <h3>Actions</h3>
         <p id="actionList" />
       </g:HTML>
      </g:FlowPanel>
      <g:FlowPanel ui:field="configActions">
       <g:HTML>
         <h3>Actions</h3>
         <p id="actionList" />
       </g:HTML>
      </g:FlowPanel>
    </g:FlowPanel>
    <!-- todo noprint -->
    <g:Label ui:field="versionLabel" styleName='{style.version}' />
   </g:FlowPanel>
  </g:east>

  </g:DockLayoutPanel>
 </g:layer>
</g:LayoutPanel>

</ui:UiBinder>
